{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 m-0">Équipes</h1>
        <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">Créer une équipe</a>
    </div>

    {% if equipes is empty %}
        <div class="alert alert-info">Aucune équipe n'a été trouvée.</div>
    {% else %}
        <div class="row g-3">
            {% for equipe in equipes %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ equipe.nom }}</h5>
                            <p class="card-text mb-1"><strong>Coach :</strong> {{ equipe.coach ?: '—' }}</p>
                            <p class="card-text mb-1"><strong>Contact :</strong> {{ equipe.contact ?: '—' }}</p>
                            <p class="card-text mb-3"><strong>Sport :</strong> {{ equipe.sport ?: '—' }}</p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    <i class="bi bi-people-fill"></i>
                                    {{ equipe.users ? equipe.users|length : 0 }} membres
                                </div>

                                <div class="btn-group">
                                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-sm btn-outline-secondary">Éditer</a>
                                    {{ include('equipe/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
