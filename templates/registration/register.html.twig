{% extends 'base.html.twig' %}

{% block title %}GameSet - Register{% endblock %}

{% block body %}
    <div class="register-card">
        <div class="card-header">
            <h2 class="register-title">Créer un compte</h2>
            <p class="register-sub">Rejoignez GameSet pour créer et gérer vos tournois.</p>
        </div>

        {{ form_errors(registrationForm, {'attr': {'class': 'form-errors'}}) }}

        <div class="register-form">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nom) }}
                {{ form_row(registrationForm.prenom) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="mt-3">
                    <button type="submit" class="btn-submit">Créer mon compte</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
