{% extends 'base.html.twig' %}

{% block title %}GameSet - Tournois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="hero py-4 mb-4 text-center text-white">
    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between gap-3">
        <div>
            <h1 class="display-5 mb-1">Tournois</h1>
            <p class="lead mb-0">Découvrez et gérez vos tournois</p>
            <p class="small text-light-600 mb-0">Nombre de tournois : {{ tournois|default([])|length }}</p>
        </div>
        <div class="hero-actions d-flex align-items-center gap-2">
            <form class="d-flex" method="get" action="{{ path('app_tournois') }}">
                <input class="form-control form-control-search me-2" name="q" type="search" placeholder="Rechercher nom, sport ou format" aria-label="Search" value="{{ q|default('') }}"/>
                <button class="btn btn-outline-light btn-search" type="submit">Search</button>
            </form>

            <button type="button" class="btn btn-light btn-new" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Nouveau Tournoi
            </button>
        </div>
    </div>
</section>

{# flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">{{ message }}</div>
    {% endfor %}
{% endfor %}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Création de Tournois</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form method="POST" action="/tournoi/create">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Nom</label>
                    <input type="name" class="form-control" id="nameInput" name="nom" placeholder="Nom du tournoi">
                </div>
                <div class="mb-3">
                    <label for="sportInput" class="form-label">Sport</label>
                    <input type="text" class="form-control" id="sportInput" name="sport" placeholder="Ex: Tennis">
                </div>
                <div class="mb-3">
                    <label for="formatInput" class="form-label">Format</label>
                    <input type="text" class="form-control" id="formatInput" name="format" placeholder="Ex: Simple">
                </div>
                <div class="mb-3">
                    <label for="dateDebut" class="form-label">Date de début</label>
                    <input type="date" class="form-control" id="dateDebut" name="date_debut">
                </div>
                <div class="mb-3">
                    <label for="dateFin" class="form-label">Date de fin</label>
                    <input type="date" class="form-control" id="dateFin" name="date_fin">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Créer le tournoi</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

{# duplicate search removed — hero contains the primary search form #}

<div class="example-wrapper">
    <div class="container mt-4">
        <div class="row">
            {% for tournoi in tournois|default([]) %}
                <div class="col-md-4 mb-4">
                    <div class="card card-custom h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title">{{ tournoi.nom }}</h5>
                            <p class="card-text text-muted mb-1"><strong>Sport:</strong> {{ tournoi.sport }}</p>
                            <p class="card-text text-muted mb-1"><strong>Format:</strong> {{ tournoi.format ?: 'N/A' }}</p>
                            <p class="card-text text-muted mb-1 small"><strong>Du</strong> {{ tournoi.dateDebut ? tournoi.dateDebut|date('d/m/Y') : 'N/A' }} <strong>au</strong> {{ tournoi.dateFin ? tournoi.dateFin|date('d/m/Y') : 'N/A' }}</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_tournoi_show', {id: tournoi.id}) }}" class="btn btn-outline-primary">Voir Détails</a>
                            <small class="text-muted">ID: {{ tournoi.id }}</small>
                        </div>
                    </div>
                </div>
                {% else %}
                    <p style="text-align: center">Aucun tournoi disponible.</p>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // If URL ends with #create (header link points to /tournoi#create), open the modal
        if (window.location.hash === '#create') {
            var modalEl = document.getElementById('exampleModal');
            if (modalEl) {
                var modal = new bootstrap.Modal(modalEl);
                modal.show();
                // remove the hash to prevent reopening on refresh
                history.replaceState(null, null, window.location.pathname + window.location.search);
            }
        }
    </script>
{% endblock %}
