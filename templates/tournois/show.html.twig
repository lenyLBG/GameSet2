                    // Handle modal opening
                    scoreModal.addEventListener('show.bs.modal', function(e) {
                        const button = e.relatedTarget;
                        document.getElementById('matchIdField').value = button.dataset.matchId;
                        document.getElementById('teamADisplay').textContent = button.dataset.teamA;
                        document.getElementById('teamBDisplay').textContent = button.dataset.teamB;
                        document.getElementById('scoreAInput').value = button.dataset.scoreA;
                        document.getElementById('scoreBInput').value = button.dataset.scoreB;
                    });

                    // Handle form submission
                    scoreForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        const matchId = document.getElementById('matchIdField').value;
                        const scoreA = document.getElementById('scoreAInput').value;
                        const scoreB = document.getElementById('scoreBInput').value;

                        const formData = new FormData();
                        formData.append('score_a', scoreA);
                        formData.append('score_b', scoreB);
                        formData.append('_token', document.querySelector('meta[name="csrf-token"]')?.content || '');

                        fetch('{{ path("app_rencontre_score", {id: "MATCH_ID"}) }}'.replace('MATCH_ID', matchId), {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => {
                            if (response.ok) {
