{% extends 'base.html.twig' %}

{% block title %}Détails Tournoi - {{ tournoi.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-custom shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-3">{{ tournoi.nom }}</h2>
                    <p class="mb-2"><strong>Sport:</strong> <span class="text-muted">{{ tournoi.sport }}</span></p>
                    <p class="mb-2"><strong>Format:</strong> <span class="text-muted">{{ tournoi.format ?: 'N/A' }}</span></p>
                    <p class="mb-2"><strong>Période:</strong> <span class="text-muted">{{ tournoi.dateDebut ? tournoi.dateDebut|date('d/m/Y') : 'N/A' }} — {{ tournoi.dateFin ? tournoi.dateFin|date('d/m/Y') : 'N/A' }}</span></p>
                    <p class="mb-0"><small class="text-muted">ID: {{ tournoi.id }}</small></p>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-between">
                    <div>
                        <a href="{{ path('app_tournois') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                    <div class="d-flex gap-2">
                        {% if app.user and tournoi.creator is not null and (app.user == tournoi.creator or is_granted('ROLE_ADMIN')) %}
                            <a href="{{ path('app_tournoi_edit', {'id': tournoi.id}) }}" class="btn btn-primary">Modifier</a>
                            <form method="post" action="{{ path('app_tournoi_delete', {'id': tournoi.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tournoi ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-md-8 d-flex justify-content-end">
            {% if app.user %}
                {% if app.user == tournoi.creator or is_granted('ROLE_ADMIN') %}
                    <button class="btn btn-outline-secondary" disabled>Vous êtes autorisé</button>
                {% else %}
                    <form method="post" action="{{ path('app_tournoi_request_participation', {'id': tournoi.id}) }}" class="m-0 d-flex gap-2">
                        <input type="hidden" name="_token" value="{{ csrf_token('request_participation_' ~ tournoi.id) }}">
                        <input type="text" name="message" class="form-control form-control-sm" placeholder="Message facultatif" style="max-width:360px">
                        <button class="btn btn-warning">Faire une demande de participation</button>
                    </form>
                {% endif %}
            {% else %}
                <a href="#" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#loginModal">Faire une demande de participation</a>
            {% endif %}
        </div>
    </div>

    {% if participation_requests is defined and participation_requests is not empty and app.user and (app.user == tournoi.creator or is_granted('ROLE_ADMIN')) %}
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5>Demandes de participation</h5>
                    <ul class="list-group">
                        {% for req in participation_requests %}
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>{{ req.user.nom }} {{ req.user.prenom }}</strong>
                                    <div class="text-muted small">Envoyé le {{ req.createdAt|date('d/m/Y H:i') }}</div>
                                    {% if req.message %}
                                        <div class="mt-2">{{ req.message }}</div>
                                    {% endif %}
                                </div>
                                <div class="d-flex gap-2">
                                    <form method="post" action="{{ path('app_participation_request_decide', {'id': req.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('decide_part_' ~ req.id) }}">
                                        <input type="hidden" name="action" value="accept">
                                        <button class="btn btn-sm btn-success">Accepter</button>
                                    </form>
                                    <form method="post" action="{{ path('app_participation_request_decide', {'id': req.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('decide_part_' ~ req.id) }}">
                                        <input type="hidden" name="action" value="reject">
                                        <button class="btn btn-sm btn-outline-danger">Refuser</button>
                                    </form>
                                </div>
                            </li>
                        {% else %}
                            <li class="list-group-item">Aucune demande en attente.</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-3">Participants</h3>
                    {% if tournoi.equipes is empty %}
                        <p class="text-muted">Aucun participant pour le moment.</p>
                    {% else %}
                        <ul class="list-group mb-3">
                            {% for equipe in tournoi.equipes %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{ equipe.nom }}</strong>
                                        {% if equipe.coach %}<div class="text-muted small">Coach: {{ equipe.coach }}</div>{% endif %}
                                    </div>
                                    <div>
                                        {% if app.user and tournoi.creator is not null and (app.user == tournoi.creator or is_granted('ROLE_ADMIN')) %}
                                            <form method="post" action="{{ path('app_tournoi_remove_participant', {'id': tournoi.id, 'equipeId': equipe.id}) }}" onsubmit="return confirm('Retirer cet participant ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('remove_participant_' ~ tournoi.id ~ '_' ~ equipe.id) }}">
                                                <button class="btn btn-sm btn-outline-danger">Retirer</button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if app.user and tournoi.creator is not null and (app.user == tournoi.creator or is_granted('ROLE_ADMIN')) %}
                        <h5>Ajouter un participant</h5>
                        <form method="post" action="{{ path('app_tournoi_add_participant', {'id': tournoi.id}) }}" class="row g-2">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_participant_' ~ tournoi.id) }}">
                            <div class="col-md-6">
                                <input type="text" name="nom" class="form-control" placeholder="Nom de l'équipe" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="coach" class="form-control" placeholder="Coach (optionnel)">
                            </div>
                            <div class="col-md-3 d-flex">
                                <button class="btn btn-success w-100">Ajouter</button>
                            </div>
                        </form>
                    {% else %}
                        <p class="text-muted">Vous devez être connecté en tant que créateur pour ajouter des participants. <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Se connecter</a></p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
