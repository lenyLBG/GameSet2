{% extends 'base.html.twig' %}

{% block title %}Modèle — {{ template.name ?: 'Détails' }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
            <h1 class="h3 mb-1">{{ template.name ?: 'Modèle #' ~ template.id }}</h1>
            <div class="text-muted small">
                {% if template.author is defined and template.author %}
                    Par {{ template.author.prenom ~ ' ' ~ template.author.nom }} •
                {% endif %}
                Créé le {{ template.createdAt ? template.createdAt|date('d/m/Y H:i') : '—' }}
                {% if template.updatedAt is defined and template.updatedAt %}
                    • Mis à jour le {{ template.updatedAt|date('d/m/Y H:i') }}
                {% endif %}
            </div>
        </div>

        <div class="btn-group">
            <a href="{{ path('app_template_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
            {% if is_granted('ROLE_USER') and template is defined and template.id %}
                <a href="{{ path('app_template_use', {'id': template.id}) }}" class="btn btn-primary">Utiliser ce modèle</a>
                <a href="{{ path('app_template_edit', {'id': template.id}) }}" class="btn btn-outline-primary">Éditer</a>
                <form method="post" action="{{ path('app_template_delete', {'id': template.id}) }}" onsubmit="return confirm('Supprimer ce modèle ?');" style="display:inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_template_' ~ template.id) }}">
                    <button class="btn btn-outline-danger">Supprimer</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-body">
                    <h5>Description</h5>
                    <p class="text-muted">{{ template.description ?: 'Aucune description fournie.' }}</p>

                    <hr>

                    <h5>Aperçu</h5>
                    <div class="template-preview border rounded p-3" style="min-height:200px;">
                        {# If the template content contains HTML, render it safely. If it's Markdown or plain text, show as preformatted. #}
                        {% if template.content is defined and template.content is not empty %}
                            {# Render raw content — assume content is trusted. If untrusted, consider sanitizing server-side. #}
                            {{ template.content|raw }}
                        {% else %}
                            <div class="text-muted">Aucun contenu disponible pour l'aperçu.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">Détails</h6>
                    <dl class="row small">
                        <dt class="col-5">ID</dt>
                        <dd class="col-7">{{ template.id }}</dd>

                        <dt class="col-5">Type</dt>
                        <dd class="col-7">{{ template.type ?: '—' }}</dd>

                        <dt class="col-5">Catégorie</dt>
                        <dd class="col-7">{{ template.category ?: '—' }}</dd>

                        <dt class="col-5">Visibilité</dt>
                        <dd class="col-7">{{ template.isPublic ? 'Publique' : 'Privée' }}</dd>
                    </dl>
                </div>
            </div>

            {% if template.tags is defined and template.tags|length > 0 %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h6>Tags</h6>
                        <div class="d-flex flex-wrap gap-2">
                            {% for tag in template.tags %}
                                <span class="badge bg-secondary">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
