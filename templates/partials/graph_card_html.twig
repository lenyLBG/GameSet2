<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  {# Use global site styles (site.css) — avoid inline style blocks #}
</head>
<body>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title mb-3">Tournois créés (6 derniers mois)</h6>
          <canvas id="tournoiChart" height="200"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const ctx = document.getElementById('tournoiChart').getContext('2d');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['mai', 'juin', 'juil.', 'août', 'sept.', 'oct.'],
      datasets: [{
        label: 'Tournois créés',
        data: [0, 1, 3, 2, 4, 3],
        borderColor: '#0b0b12',
        backgroundColor: 'rgba(11, 11, 18, 0.05)',
        tension: 0.4,
        fill: true,
        pointRadius: 4,
        pointBackgroundColor: '#0b0b12'
      }]
    },
    
</script>

</body>
</html>
