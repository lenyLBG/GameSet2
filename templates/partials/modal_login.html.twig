<!-- Modal -->
<div class="modal fade" id="modal-login" tabindex="-1" aria-labelledby="modal-login-label" aria-hidden="true"
  data-bs-backdrop="static" data-bs-keyboard="false"> <!-- Ã©vite fermetures accidentelles -->
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title">Gameset</h5>
        <!-- (bouton de fermeture optionnel)
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        -->
      </div>

      <div class="modal-body">
        <!-- Segmented control -->
        <div class="nav nav-pills bg-light rounded-pill p-1 d-inline-flex mb-3" role="tablist">
          <button class="nav-link rounded-pill px-4 text-dark bg-white active"
                  id="tab-login"
                  data-bs-toggle="pill" data-bs-target="#pane-login"
                  type="button" role="tab" aria-controls="pane-login" aria-selected="true">
            Connexion
          </button>

          <button class="nav-link rounded-pill px-4 text-secondary"
                  id="tab-signup"
                  data-bs-toggle="pill" data-bs-target="#pane-signup"
                  type="button" role="tab" aria-controls="pane-signup" aria-selected="false">
            Inscription
          </button>
        </div>

        <!-- Contenus -->
        <div class="tab-content">
          <div class="tab-pane fade show active" id="pane-login" role="tabpanel" aria-labelledby="tab-login">
            <!-- Formulaire connexion -> utilise le firewall Symfony -->
            <form id="form-login" method="post" action="{{ path('app_login') }}">
              <div class="mb-3">
                <label for="login-email" class="form-label">Email</label>
                <input id="login-email" name="_username" type="email" class="form-control" autocomplete="email" required autofocus>
              </div>
              <div class="mb-3">
                <label for="login-password" class="form-label">Mot de passe</label>
                <input id="login-password" name="_password" type="password" class="form-control" autocomplete="current-password" required>
              </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
              <button type="submit" class="btn btn-dark w-100">Se connecter</button>
            </form>
          </div>

          <div class="tab-pane fade" id="pane-signup" role="tabpanel" aria-labelledby="tab-signup">
            {# render the registration modal fragment created in RegistrationController #}
            {{ render(path('app_register_modal')) }}
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
